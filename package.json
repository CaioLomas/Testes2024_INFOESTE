  "dependencies": {
    "express": "^4.21.1"
  },
  "devDependencies": {
    "chai": "^5.1.1",
    "chai-http": "^5.1.1",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "nyc": "^17.1.0",
    "sinon": "^19.0.2"
  }
